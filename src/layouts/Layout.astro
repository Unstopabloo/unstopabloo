---
import "@fontsource-variable/jost";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Pablo Oyarce Desarrollador Frontend, abierto a trabajar en sitios web y aplicaciones interactivas"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative">
		<div
			id="trailer"
			class="pointer-events-none fixed inset-0 -z-30 duration-300"
			style="background: radial-gradient(600px at 1000px 500px, rgba(29, 60, 216, 0.15), transparent 80%);"
		>
		</div>
		<div
			class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0 z-50"
		>
			<slot />
		</div>
	</body>
</html>

<script>
	const trailer = document.getElementById("trailer");

	window.onmousemove = (e) => {
		const x = e.clientX - trailer!.offsetWidth / 2;
		const y = e.clientY - trailer!.offsetHeight / 2;

		trailer!.style.transform = `translate(${x}px, ${y}px)`;
	};
</script>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		scroll-behavior: smooth;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	body {
		overflow-x: hidden;
		width: 100%;
		min-height: 100vh;
	}
	.jost {
		font-family: "Jost Variable", sans-serif;
	}

	.reveal {
		animation: reveal linear both;
		animation-timeline: view();
		animation-range: entry 0% cover 20%;
	}

	@keyframes reveal {
		0% {
			opacity: 0;
			transform: translateY(150px);
		}

		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
