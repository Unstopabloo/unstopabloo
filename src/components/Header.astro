---
import { Image } from "astro:assets";
import Perfil from "../img/perfil1.avif";
---

<header>
  <div
    class="relative w-full flex justify-center items-center py-14 px-4 rounded-xl border-[4px] border-unst"
  >
    <div
      class="absolute overflow-hidden flex items-center justify-center -bottom-8 -left-8 size-20 rounded-full bg-transparent border-[4px] border-unst"
    >
      <Image
        src={Perfil}
        alt="Avatar de Pablo Oyarce"
        class="rounded-full object-cover translate-y-1"
      />
    </div>
    <small class="absolute -bottom-7 left-14 font-semibold text-unst"
      >Actualmente trabajando</small
    >
    <h1 class="jost font-bold text-5xl text-white">Hola! soy Pablo Oyarce</h1>
  </div>
</header>
